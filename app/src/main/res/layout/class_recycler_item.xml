<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="82dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        app:cardBackgroundColor="#ffff"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/course_img_item"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/classroom_base" />

            <TextView
                android:id="@+id/course_number_item"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/class_id_item"
                android:gravity="end"
                android:text=""
                android:textColor="#b231fc"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/class_id_item"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignStart="@+id/course_name_item"
                android:layout_alignTop="@+id/course_img_item"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="#000000"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/course_name_item"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@+id/class_id_item"
                android:layout_marginStart="15dp"
                android:layout_toRightOf="@+id/course_img_item"
                android:gravity="center_vertical"
                android:text="加载中......"
                android:textColor="#000000"
                android:textStyle="bold"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/course_teacher_name"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@+id/course_name_item"
                android:layout_marginStart="15dp"
                android:layout_toRightOf="@+id/course_img_item"
                android:gravity="center_vertical"
                android:text=""
                tools:ignore="RtlCompat" />
        </RelativeLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>