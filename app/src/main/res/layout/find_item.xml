<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        app:cardBackgroundColor="#ffff"
        app:cardCornerRadius="2dp"
        app:cardElevation="1dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/sign_record_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="0000-00-00"
                android:layout_marginLeft="10dp"
                android:textSize="17dp"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <TextView
                android:id="@+id/sign_record_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"

                android:layout_below="@+id/sign_record_date"
                android:layout_alignLeft="@+id/sign_record_date"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <TextView
                android:id="@+id/sign_record_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="星期五"
                android:layout_toRightOf="@+id/sign_record_date"
                android:layout_marginLeft="10dp"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <TextView
                android:text="签到"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/sign_record_week"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <TextView
                android:id="@+id/sign_record_information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:text="0 人/ 0人"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <!--
