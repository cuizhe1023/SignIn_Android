<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f4f8fa"
    tools:context="com.nuc.signin_android.classroom.course.info.CourseInfoFragment">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/show_appbar"
        android:layout_width="match_parent"
        android:layout_height="42dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/show_title_text"
                android:gravity="center"
                android:text=""
                android:textStyle="bold"
                android:textColor="#ffff"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>
    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:background="#ffff"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <ImageView
            android:id="@+id/show_image"
            android:src="@drawable/classroom_base"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            tools:ignore="ContentDescription,RtlHardcoded" />
        <TextView
            android:textSize="15sp"
            android:textColor="#272727"
            android:text=""
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/show_image"
            android:id="@+id/show_class_number_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="RtlHardcoded" />
        <TextView
            android:textColor="#272727"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            android:text=""
            android:layout_toRightOf="@+id/show_image"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/show_class_number_text"
            android:id="@+id/show_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="RtlHardcoded" />
        <TextView
            android:id="@+id/show_teacher_name_text"
            android:text=""
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/show_image"
            android:layout_below="@+id/show_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="RtlHardcoded" />

    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <LinearLayout
        android:orientation="vertical"
        android:background="#ffff"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:textSize="16sp"
            android:textColor="#272727"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="课程号"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            tools:ignore="HardcodedText,RtlHardcoded" />
        <TextView
            android:text=""
            android:gravity="center_vertical"
            android:textColor="#b95757"
            android:id="@+id/show_course_id_text"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            tools:ignore="RtlHardcoded" />

    </LinearLayout>
    <TextView
        android:background="#ababab"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <LinearLayout
        android:orientation="vertical"
        android:background="#ffff"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:textSize="16sp"
            android:textColor="#272727"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="课时"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            tools:ignore="HardcodedText,RtlHardcoded" />
        <TextView
            android:id="@+id/show_course_time_text"
            android:text=""
            android:gravity="center_vertical"
            android:textColor="#b95757"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            tools:ignore="RtlHardcoded" />

    </LinearLayout>

    <TextView
        android:id="@+id/course_info_cut_line1"
        android:background="#ababab"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <RelativeLayout
        android:id="@+id/download_info_rl"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="#ffff"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/download_student_template_list"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="学生模板文件:"
            android:textColor="#272727"
            android:textSize="16sp"
            tools:ignore="HardcodedText,RtlHardcoded" />

        <TextView
            android:id="@+id/template_path"
            android:layout_width="195dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/download_student_template_list"
            android:ellipsize="none"
            android:gravity="center_vertical"
            android:singleLine="false"
            android:text=""
            android:textColor="#272727"
            android:textSize="16sp"
            tools:ignore="RtlHardcoded" />

        <Button
            android:id="@+id/download_template_btn"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/download_student_template_list"
            android:layout_alignBottom="@+id/download_student_template_list"
            android:layout_alignParentEnd="true"
            android:textColor="#ffff"
            android:background="#dd5555"
            android:textStyle="bold"
            android:layout_marginEnd="12dp"
            android:text="下载模板"
            tools:ignore="HardcodedText,RtlCompat" />
    </RelativeLayout>

    <TextView
        android:id="@+id/course_info_cut_line3"
        android:background="#ababab"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <RelativeLayout
        android:id="@+id/course_info_rl"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="#ffff"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/select_student_list"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="选择学生名单:"
            android:textColor="#272727"
            android:textSize="16sp"
            tools:ignore="HardcodedText,RtlHardcoded" />

        <TextView
            android:id="@+id/file_path"
            android:layout_width="195dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/select_student_list"
            android:ellipsize="none"
            android:gravity="center_vertical"
            android:singleLine="false"
            android:text=""
            android:textColor="#272727"
            android:textSize="16sp"
            tools:ignore="RtlHardcoded" />

        <Button
            android:id="@+id/select_file_btn"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/select_student_list"
            android:layout_alignBottom="@+id/select_student_list"
            android:layout_alignParentEnd="true"
            android:textColor="#ffff"
            android:background="#dd5555"
            android:textStyle="bold"
            android:layout_marginEnd="12dp"
            android:text="选择文件"
            tools:ignore="HardcodedText,RtlCompat" />
    </RelativeLayout>

    <Button
        android:id="@+id/upload_btn"
        android:textStyle="bold"
        android:textColor="#ffff"
        android:background="#dd5555"
        android:text="上传学生名单"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/course_info_cut_line2"
        android:background="@color/write"
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <Button
        android:id="@+id/end_class_btn"
        android:textStyle="bold"
        android:textColor="#ffff"
        android:background="#dd5555"
        android:text="结束课程"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        tools:ignore="HardcodedText" />
</LinearLayout>
